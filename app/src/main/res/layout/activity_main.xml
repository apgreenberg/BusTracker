<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/name_input"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:ems="10"
        android:hint="@string/add_name"
        android:inputType="textPersonName"
        android:text="" />

    <EditText
        android:id="@+id/time_input"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:ems="10"
        android:hint="@string/add_time"
        android:inputType="time"
        android:text="" />

    <EditText
        android:id="@+id/loc_input"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:ems="10"
        android:hint="@string/add_class"
        android:inputType="textPostalAddress"
        android:text="" />

    <EditText
        android:id="@+id/bus_input"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:ems="10"
        android:hint="@string/add_bus"
        android:inputType="textPostalAddress"
        android:text="" />

    <EditText
        android:id="@+id/stop_input"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:ems="10"
        android:hint="@string/add_stop"
        android:inputType="textPostalAddress"
        android:text="" />

    <Button
        android:id="@+id/get_info"
        style="@android:style/Widget.Holo.Button.Toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="switchScreens"
        android:text="Search for Upcoming Times" />


</LinearLayout>