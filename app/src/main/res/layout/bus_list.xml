<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewBus"
        android:layout_width="match_parent"
        android:layout_height="119dp"
        android:gravity="center_vertical"
        android:text=""
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/blackOne"
        android:layout_width="match_parent"
        android:layout_height="9dp"
        android:background="@android:color/black"
        android:text="TextView" />

    <TextView
        android:id="@+id/textViewOne"
        android:layout_width="415dp"
        android:layout_height="91dp"
        android:background="@android:color/holo_orange_dark"
        android:drawableTop="@android:color/black"
        android:drawableBottom="@android:color/black"
        android:gravity="left"
        android:text=""
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="60sp" />

    <TextView
        android:id="@+id/blackTwo"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@android:color/black"
        android:text="TextView" />

    <TextView
        android:id="@+id/textViewTwo"
        android:layout_width="415dp"
        android:layout_height="92dp"
        android:background="@android:color/holo_blue_dark"
        android:text=""
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="60sp" />

    <TextView
        android:id="@+id/BlackThree"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@android:color/black"
        android:text="TextView" />

    <TextView
        android:id="@+id/textViewThree"
        android:layout_width="415dp"
        android:layout_height="93dp"
        android:background="@android:color/holo_orange_dark"
        android:text=""
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="60sp" />

    <TextView
        android:id="@+id/blackFour"
        android:layout_width="match_parent"
        android:layout_height="9dp"
        android:background="@android:color/black"
        android:text="TextView" />

    <TextView
        android:id="@+id/textViewFour"
        android:layout_width="415dp"
        android:layout_height="91dp"
        android:background="@android:color/holo_blue_dark"
        android:text=""
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="60sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@android:color/black"
        android:text="TextView" />

    <Button
        android:id="@+id/get_info"
        style="@android:style/Widget.Holo.Button.Toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="refreshPage"
        android:text="Refresh Page" />

</LinearLayout>